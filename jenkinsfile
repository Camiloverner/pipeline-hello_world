pipeline {
    agent any
    
    stages {
        stage('Pegar o código no repositório') {
            steps {
                dir('/home/meu-usuario/repositorio') {
                    git 'https://github.com/Camiloverner/pipeline-hello_world-flask.git'
                }
            }
        }
        
        stage('fazer o deploy na web') {
            steps {
                sh 'python hello_world.py'
            }
        }
    }
}
